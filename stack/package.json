{
	"name": "@adbayb/stack",
	"version": "1.16.1",
	"description": "My opinionated JavaScript-based toolchain",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"bin",
		"dist",
		"template",
		"config/*"
	],
	"bin": {
		"stack": "./bin/index.js"
	},
	"type": "module",
	"exports": {
		".": {
			"source": "./src/index.ts",
			"default": "./bin/index.js"
		},
		"./eslint": {
			"default": "./config/eslint/index.mjs"
		},
		"./prettier": {
			"default": "./config/prettier/index.js"
		},
		"./typescript": {
			"default": "./config/typescript/index.json"
		}
	},
	"scripts": {
		"prepublishOnly": "pnpm build",
		"prestart": "echo 'prestart'",
		"start": "bin/index.js",
		"build": "tsx ../tools/scripts/build && chmod +x bin/index.js",
		"watch": "NODE_ENV=development tsx ../tools/scripts/build"
	},
	"keywords": [
		"stack",
		"scripts",
		"toolchain",
		"development"
	],
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/adbayb/stack.git",
		"directory": "applications/stack"
	},
	"license": "MIT",
	"dependencies": {
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.8",
		"@commitlint/cli": "^19.4.1",
		"@commitlint/config-conventional": "^19.4.1",
		"@eslint/compat": "^1.1.1",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.10.0",
		"@typescript-eslint/eslint-plugin": "^8.5.0",
		"@typescript-eslint/parser": "^8.5.0",
		"eslint": "^9.9.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.3",
		"eslint-plugin-astro": "^1.2.3",
		"eslint-plugin-deprecation": "^3.0.0",
		"eslint-plugin-import": "^2.30.0",
		"eslint-plugin-jest-formatting": "^3.1.0",
		"eslint-plugin-jsdoc": "^50.2.2",
		"eslint-plugin-mdx": "^3.1.5",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-react": "^7.35.2",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-sonarjs": "^1.0.4",
		"eslint-plugin-sort-keys-custom-order": "^2.1.0",
		"eslint-plugin-vitest": "^0.5.4",
		"fdir": "^6.3.0",
		"globals": "^15.9.0",
		"prettier": "^3.3.3",
		"prettier-plugin-astro": "^0.14.1",
		"termost": "^0.14.0",
		"turbo": "^2.1.1",
		"typescript": "^5.6.2"
	},
	"devDependencies": {
		"@types/eslint": "8.56.12"
	}
}
